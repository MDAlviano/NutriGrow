<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.plantplan.detail.progress.UploadPlantPlanProgressActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Progress Tanaman"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginBottom="8dp"/>

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambil foto kondisi tanaman hari ini"
                android:textSize="14sp"
                android:textColor="@color/text"
                android:layout_marginBottom="16dp"/>

            <!-- Label Input Gambar -->
            <TextView
                android:id="@+id/tvInputImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_marginBottom="8dp"/>

            <!-- Tombol Kamera dan Galeri -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFromCamera"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Kamera"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/primary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFromGallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Galeri"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/primary"/>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"
                android:layout_marginVertical="16dp"/>

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/imgAIPosted"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="Pratinjau Gambar Tanaman"
                android:layout_marginBottom="16dp"/>

            <!-- Response Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAIResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvAIResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    tools:text="Hasil diagnosa akan muncul di sini"/>

            </androidx.cardview.widget.CardView>

            <!-- Tombol Simpan -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="12dp"
                android:text="Simpan"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:visibility="gone"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/primary"/>

        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar untuk Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>